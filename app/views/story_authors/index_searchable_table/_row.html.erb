<% story_author = record %>
<%= cp.tr_tag(id: cp.record_to_namespace(story_author)) do %>
  <%= cp.td_tag(class: "actions") do %>
    <%= cp.modal_edit_link(content: "", add_class: "text-default") %>
    <%= cp.destroy_link(content: "", add_class: "text-default") %>
  <% end %>

  <%= cp.td_tag(class: "name") do %>
    <%= story_author.name %>
  <% end %>

  <% Story.const.location_models.each do |location_model| %>
    <%= cp.td_tag(class: "#{location_model.const.location_slug}_name") do %>
      <%= story_author.send("#{location_model.const.location_slug}_name") %>
    <% end %>
  <% end %>
<% end %>
