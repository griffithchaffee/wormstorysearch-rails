<% story = record %>
<%= cp.tr_tag(id: cp.record_to_namespace(story), class: cp.status_class) do %>
  <%= cp.td_tag(class: "details") do %>
    <%= cp.recently_created_icon %>
    <% link_options = { content: "", add_class: "text-default", merge_data: { toggle: "tooltip-desktop" } } %>
    <%= cp.modal_show_link(link_options.dup, icon: "list", title: "View details") %>
    <% if story.is_unlocked? %>
      <%= cp.modal_edit_link(link_options.dup, title: "Edit details") %>
    <% end %>
  <% end %>

  <%= cp.td_tag(class: "story_updated_at") do %>
    <%= cp.span_tag(class: "hidden-sm hidden-xs", content: story.story_updated_at.to_full_human_s) %>
    <%= cp.span_tag(class: "hidden-md hidden-lg", content: story.story_updated_at.to_brief_human_s) %>
  <% end %>

  <%= cp.td_tag(class: "title") do %>
    <%= cp.tab_link(story.read_url, content: story.title) do %>
      <%= story.title %> <% if story.crossover? %>[<%= story.crossover %>]<% end %>
    <% end %> by <%= story.active_location.author %>
    <%= cp.br_tag %>
    <% story.locations.each do |location| %>
      <%= cp.tab_link(location.read_url, style: "text-decoration: none;") do %>
        <%= cp.label_span("primary", content: location.const.location_label) %>
      <% end %>
    <% end %>
  <% end %>

  <%= cp.td_tag(class: "word_count") do %>
    <%= story.word_count.to_human_size %>
  <% end %>
<% end %>
