<%= content_for(:title) do %>
  <%= @story.category_label %>:
  <%= @story.title %>
<% end %>

<%= cp.div_tag do %>
  <%= cp.b_tag(content: "Author:") %>
  <%= @story.author %>
<% end %>

<% if @story.crossover? %>
  <%= cp.div_tag do %>
    <%= cp.b_tag(content: "Crossover:") %>
    <%= @story.crossover %>
  <% end %>
<% end %>

<%= cp.div_tag do %>
  <%= cp.b_tag(content: "Words:") %>
  <%= @story.word_count.to_human_size %>
<% end %>

<%= cp.div_tag do %>
  <%= cp.b_tag(content: "Created:") %>
  <%= @story.story_created_on.to_full_human_s %>
<% end %>

<%= cp.div_tag do %>
  <%= cp.b_tag(content: "Updated:") %>
  <%= @story.story_updated_at.to_full_human_s %>
<% end %>

<% description = @story.description? ? @story.description : "No description... you can add one by editing this story." %>
<%= cp.pre_tag(add_class: "break pretty", style: "margin-top: 10px", content: description) %>

<% if @story.locations.present? %>
  <%= render_partial("unsearchable_table", directory: "locations", collection: @story.locations_sorted_by_updated_at) %>
<% end %>

<%= content_for(:footer) do %>
  <%= cp.read_story_link_btn %>
  <%= cp.modal_close_btn %>
<% end %>
