<% if view_layout == "modal" %>
  <%= content_for(:title) do %>
    <%= @story.title %>
    <%= cp.small_tag(content: "(#{@story.category_label})") %>
  <% end %>
<% else %>
  <%= cp.page_header_div do %>
    <%= cp.page_actions_div do %>
      <%= cp.read_link_btn %>
      <%= cp.show_link_btn %>
    <% end %>

    <%= cp.page_title(content: @story.title, sub_text: "(#{@story.category_label})") %>
  <% end %>
<% end %>

<%= cp.form_for do |form_builder| %>
  <%= render_partial("form_fields") %>

  <% if view_layout == "modal" %>
    <%= content_for(:footer) do %>
      <%= cp.modal_submit_btn %>
      <%= cp.modal_close_btn %>
    <% end %>
  <% else %>
    <%= cp.form_submit_div %>
  <% end %>
<% end %>
